<?xml version='3.0' encoding='utf-8'?>
<widget id="com.tabletopbd" version="3.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TABLETOP</name>
    <description>Tabletop is a digital restaurant reservation platform. Where users can enjoy time-based discounts on excellent food. Tabletop connects customers with restaurants via time-based discount.</description>
    <author email="sakib.works@gmail.com" href="http://sakibian.com">
        TABLETOP 
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="http://127.0.0.1/MP/*" />
    <allow-intent href="http://PublicIPAddress//MP/*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <hook type="before_prepare" src="scripts/prebuild.js"/>
    

