    <platform name="android">
        <icon src="AppIcons/android/mipmap-mdpi/tabletop_android.png" density="mdpi" />
        <icon src="AppIcons/android/mipmap-hdpi/tabletop_android.png" density="hdpi" />
        <icon src="AppIcons/android/mipmap-xhdpi/tabletop_android.png" density="xhdpi" />
